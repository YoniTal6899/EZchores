<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:textAlignment="center"
    tools:context=".Group_User_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/group_name"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/shopping_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:contentDescription="@string/_0"
            android:src="@drawable/shopping_cart"
            app:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:maxImageSize="45dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/group_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="19dp"
            android:contentDescription="@string/_0"
            android:src="@drawable/person"
            app:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@id/group_name"
            app:layout_constraintTop_toTopOf="parent"
            app:maxImageSize="45dp" />

        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/goals"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shopping_list" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/new_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="-10dp"
            android:contentDescription="@string/_0"
            android:src="@drawable/add_icon"
            app:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="@id/goals"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="45dp" />

        <ProgressBar
            android:id="@+id/goal_1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goals"
            app:trackColor="@color/white"
            app:trackThickness="18dp" />
        <ProgressBar
            android:id="@+id/goal_2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_1"
            app:trackColor="@color/white"
            app:trackThickness="18dp" />
        <ProgressBar
            android:id="@+id/goal_3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_2"
            app:trackColor="@color/white"
            app:trackThickness="18dp" />

        <TextView
            android:id="@+id/tasks_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/uncompleted_tasks"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_3" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/new_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="-10dp"
            android:contentDescription="@string/_0"
            android:src="@drawable/add_icon"
            app:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@id/tasks_view"
            app:layout_constraintTop_toTopOf="@id/tasks_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="45dp" />

        <TextView
            android:id="@+id/task_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/task_1_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tasks_view" />

        <TextView
            android:id="@+id/val_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/_0"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/task_1"
            app:layout_constraintTop_toBottomOf="@id/tasks_view" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="19dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@id/val_1"
            app:layout_constraintTop_toBottomOf="@id/tasks_view"
            app:srcCompat="@drawable/coins"
            android:contentDescription="@string/coins" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/p1_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person"
            app:backgroundTint="@color/white"
            app:fabCustomSize="40dp"
            app:layout_constraintEnd_toStartOf="@id/member1name"
            app:layout_constraintTop_toTopOf="@id/task_1"
            app:maxImageSize="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="-10dp"/>

        <TextView
            android:id="@+id/member1name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="name1"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/p1_photo" />

        <TextView
            android:id="@+id/task_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Task 2 content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_1" />

        <TextView
            android:id="@+id/val_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/_0"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/task_1"
            app:layout_constraintTop_toBottomOf="@id/task_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="19dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@id/val_1"
            app:layout_constraintTop_toBottomOf="@id/task_1"
            app:srcCompat="@drawable/coins"
            android:contentDescription="@string/coins" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/p2_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person"
            app:backgroundTint="@color/white"
            app:fabCustomSize="40dp"
            app:layout_constraintEnd_toStartOf="@id/member1name"
            app:layout_constraintTop_toTopOf="@id/task_2"
            app:maxImageSize="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="-10dp"/>

        <TextView
            android:id="@+id/member2name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="name2"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/p2_photo" />

        <TextView
            android:id="@+id/task_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Task 3 content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_2" />

        <TextView
            android:id="@+id/val_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/_0"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/task_3"
            app:layout_constraintTop_toBottomOf="@id/task_2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="19dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@id/val_3"
            app:layout_constraintTop_toBottomOf="@id/task_2"
            app:srcCompat="@drawable/coins"
            android:contentDescription="@string/coins" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/p3_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person"
            app:backgroundTint="@color/white"
            app:fabCustomSize="40dp"
            app:layout_constraintEnd_toStartOf="@id/member3name"
            app:layout_constraintTop_toTopOf="@id/task_3"
            app:maxImageSize="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="-10dp"
            />

        <TextView
            android:id="@+id/member3name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="name3"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/p3_photo" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_to_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:background="@color/black"
            android:text="@string/back_to_groups"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>